<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCustomTrain"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/main">

        <ImageButton
            android:id="@+id/ibBackBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/back_icon"
            android:background="@color/main"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_trains"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="chose exercises"
        android:id="@+id/choseExercisesBtn"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Новая тренировка"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/trainName" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="set public"
        android:id="@+id/isPublicTrain" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Train"
        android:id="@+id/createTrainButton" />


</LinearLayout>